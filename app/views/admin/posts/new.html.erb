<h1>Admin::Posts#new</h1>
<!-- we use form_for bc we want to retrieve data in our data base -->
<!-- by passing an object as instance it is possible to use the render evrywhere -->
<% if @post.errors.any? %>
  <div id="validation_errors">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited a successful save: </h2>
 
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>

  </div>
<% end %>


<p> <%= render 'form' %></p>