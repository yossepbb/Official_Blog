<h1>Comments</h1>
<p>
	<%= link_to 'Approved', admin_comments_path(status: true) %> |
	<%= link_to 'Unapproved', admin_comments_path(status: false) %>
</p>
<% @comments.each do |c| %>
	<p><b> <%= c.visitor.fullname %></b></p><br> 
	<p><b> posted message on |</b> <%= c.post.title %></p><br>
	<p><b> Message:</b> <%= c.message %></p>

	<p><%= link_to 'Delete', admin_comment_path(c), method: :delete, data: {confirm: "Are you sure ?"} %></p>
	<hr>
<% end -%>