<h1>Edit moderator</h1>

<!-- by passing an object as instance it is possible to use the render evrywhere -->
<%= render 'validator_errors', object: @moderator %>

<%= form_for [:admin, @moderator] do |f| %>

	<p>
		<%= f.label :fullname %>
		<%= f.text_field :fullname %>
	</p>
	
	<p>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</p>
	
	<p>
		<%= f.label :password %>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	

<% end %>

